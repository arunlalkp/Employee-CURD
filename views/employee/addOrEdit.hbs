    <div class="d-flex justify-content-between">
        <h3>
        {{viewTitle}}
        </h3>
        <a href="/employee/list" class="btn btn-secondary align-right"><i class="far fa-list-alt"></i>  View All</a>
    </div>
            <hr>

    <form action="/employee" method="POST">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label for="inputName">Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Name" required="true" value="{{employee.fullName}}">
        
    </div>
    <div class="form-group">
        <label for="inputEmail">E mail</label>
        <input type="email" class="form-control" name="email" placeholder="E-mail" required="true" value="{{employee.email}}">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
        <label for="inputMobile">Mobile</label>
        <input type="mobile" class="form-control" name="mobile" placeholder="Mobile" required="true" value="{{employee.mobile}}">
        </div>
        <div class="form-group col-md-6">
        <label for="inputCity">City</label>
        <input type="text" class="form-control" name="city" placeholder="City" required="true" value="{{employee.city}}">
        </div>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-check-circle"></i>  {{button}}</button>
    </form>


